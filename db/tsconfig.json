{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db/*": ["packages/db/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
